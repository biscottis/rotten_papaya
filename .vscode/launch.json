            "args": [
                "--dart-define=primaryColor=0xFFF44336",
                "--dart-define=primaryVariantColor=0xFFD32F2F",
                "--dart-define=secondaryColor=0xFFFFC107",
                "--dart-define=secondaryVariantColor=0xFFFFCDD2",
                "--dart-define=fontFamily=Libre Baskerville"
            ]
        },
        {
            "name": "All Tests",
            "type": "dart",
            "request": "launch",
            "program": "test/"
